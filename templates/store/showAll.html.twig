<div >
  <div class="row">
    <div class="col-md-12">
      <h1>List of all products</h1>

      <div class="success-message alert alert-success ">
        {% for flashMessage in app.session.flashBag.get('success') %}
          {{ flashMessage }}
        {% endfor %}
      </div>
<div class="container1">
  <button type="button" class="btn btn-add" onclick="location.href='{{ path('NewArticle') }}'">New Product</button>
</div>

<div class="container">
     <table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Details</th>
      <th>Price</th>
      <th>Category</th>
      <th colspan="2">Actions</th> <!-- span two columns -->
    </tr>
  </thead>
  <tbody>
    {% for article in articles %}
      <tr>
        <td><img src="../images/{{ article.image }}" width="250" height="200" alt="Glowing"></td>
        <td>{{ article.title }}</td>
        <td>{{ article.Details }}</td>
        <td>{{ article.price }}</td>
        <td>{{ article.category.getName() }}</td>
        <td>
<button type="button" class="btn btn-primary" onclick="location.href='{{ path('edit', {'id': article.id}) }}'">Modifier</button>

        </td>
        <td>
          <button type="button" class="btn btn-danger" onclick="deleteArticle('{{ path('delete', {'id': article.id}) }}')">Supprimer</button>

<script>
function deleteArticle(url) {
  if (confirm("Are you sure you want to delete this article?")) {
    window.location.href = url;
  } 
}
</script>

        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>
</div>
    </div>
  </div>
</div>


<style>
/* Add some padding to the container */
.container {
padding:50px;

	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}
.container1 {
padding:50px;
	flex-direction: column;
	justify-content: left;
	align-items: left;
}
.success-message {
    background-color: #66cc66;
    color: #ffffff;
}
.alert {
    animation: hide-message 6s forwards;
}

@keyframes hide-message {
    0% {
        opacity: 1;
    }
    100% {
        opacity: 0;
        display: none;
    }
}

/* Style the table header */
.table th {
  text-align: center;
  background-color: #f2f2f2;
}

/* Style the table cells */
.table td {
  vertical-align: middle;
  text-align: center;
}

/* Add some margin and padding to the buttons */
.btn {
  margin: 10px;
  padding: 20px 20px;
}

.btn-primary {
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 4px;
  padding: 8px 12px;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.btn-primary:hover {
  background-color: #0062cc;
}

.btn-danger {
  background-color: #dc3545;
  color: #fff;
  border: none;
  border-radius: 4px;
  padding: 10px 12px;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}
.btn-add {
  background-color: #40826D;
  color: #fff;
  border: none;
  border-radius: 4px;
  padding: 10px 12px;

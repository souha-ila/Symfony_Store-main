{% extends 'base.html.twig' %}
{% block article %}
 <link rel="stylesheet" href="../css/single.css">
<div>

<div class="product-container">
  <div class="product-image">
    <img src="../images/{{ article.image }}" alt="Product Image">
  </div>
  <div class="product-details">
    <h2 class="product-name">{{ article.title }}</h2>
    <p class="product-description">{{ article.details }}</p>
    <p class="product-price">{{ article.price }}$</p>
    
    <div class="product-buttons">
      
      <a href="{{path('AddToCart',{'id': article.id})}}" class="buy-now-btn">add To cart</a>
    </div>
  </div>
   </div>
{% endblock %}
{% block blog %}
{% endblock %}